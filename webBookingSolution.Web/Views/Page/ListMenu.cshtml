@using webBookingSolution.ViewModels.Common;
@using webBookingSolution.ViewModels.Catalog.Menus;
@model PagedResult<MenuViewModel>

@{
    ViewData["Title"] = "Menu List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header menu-header">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-caption">
                    <h1 class="page-title">Thực đơn</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container">
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="destination-block">
                    <div class="desti-img">
                        <img src="@item.Image" alt="@item.Image" />
                        <a href="#" class="desti-title">@item.Name</a>
                        <div class="overlay"></div>
                        <div class="text">
                            <span class="item-content">@Html.Raw(item.Content)</span>
                            <p class="item-price">@item.Price.ToString("#,###")<small> đồng</small></p>
                            <a href="/Page/MenuDetail/@item.Id" class="btn-link">Xem ngay<i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @await Component.InvokeAsync("Pager", Model)
</div>

@section scripts{
    <script>
        $("#search").attr('data-target', "#searchMenu");
    </script>
}

